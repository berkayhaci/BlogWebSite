
@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<EntitiyLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>KategoriAdı</th>
        <th>Pasif</th>
        <th>Aktif</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn" onclick="    return confirm('Silmek istediğinize emin misin?');"  class=" btn btn-danger">Pasif Yap</a></td>

            <td><a href="#" class=" btn btn-success">Aktif Yap</a></td>
            <td><a href="#" class=" btn btn-warning" >Düzenle</a></td>
        </tr>
            
    }
</table>
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
